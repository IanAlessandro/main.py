<FirstScreen>:
    name: 'primeira tela'
    MDFloatLayout:
        MDCard:
            style: 'filled'
            size_hint: (1, 1)    
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            FitImage:
                source: 'alphababerprimeiratela.jpg'
                allow_stretch: True
                keep_ratio: False
    MDFillRoundFlatButton:
        text: 'Entrar'
        md_bg_color: '#A97D56'
        text_color: '#403B38'
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        size_hint_x: .6
        elevation:0
        on_release: 
            root.manager.current = 'tela de login'
            root.manager.transition.direction = 'left'

<LoginScreen>:
    name: 'tela de login'
    MDFloatLayout:
        MDCard:
            style: 'filled'
            size_hint: (1, 1)    
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            FitImage:
                source: 'teladelogin.jpg'
                allow_stretch: True
                keep_ratio: False
    MDTextField:
        hint_text: 'Email'
        mode: 'round'
        pos_hint: {'center_x': 0.5, 'center_y': 0.54}
        icon_right: 'mail'
        size_hint_x: .8
    MDTextField:
        hint_text: 'Senha'
        mode: 'round'
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        size_hint_x: .8
        icon_right: 'lock'
        password: True
    MDFillRoundFlatButton:
        text: 'Acessar'
        md_bg_color: '#403B38'
        text_color: '#A97D56'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        size_hint_x: .6
        elevation:0
        on_release: 
            root.manager.current = 'tela principal'
            root.manager.transition.direction = 'left'
    MDTextButton:
        text: 'Não tem uma conta? [u]Cadastre-se.[/u]'
        theme_text_color: 'Custom'
        text_color: 1, 1, 1, 1
        bold: True
        markup: True
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.07}
        font_size: dp(13)
        size_hint_x: .8
        on_release: 
            root.manager.current  = 'tela de cadastro'
            root.manager.transition.direction = 'left'
    MDIconButton:
        icon: 'arrow-left'
        theme_text_color: 'Custom'
        text_color: 1, 1, 1, 1
        pos_hint: {'center_x': 0.05, 'center_y': 0.97}
        on_release: 
            root.manager.current = 'primeira tela'
            root.manager.transition.direction = 'right'

